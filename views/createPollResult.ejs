<!doctype html>
<html lang="en">
  <%- include('./partials/header'); %>
  <body>
    <%- include('./partials/navigation'); %>
    <div class="container">
      <div class="row">
        <div class="col-md-12 ">
          <div class="content">
            <h1><%= title %></h1>
            <form method="POST" action="/store">
                <div class="mb-3">
                    <label for="lga_name" class="form-label">Local Government Name</label>
                    <select id="lga_name" class="form-select form-select-lg mb-3 form-control" aria-label=".form-select-lg example">
                        <option selected>Select Local Government Name</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                      </select>
                </div>
                <div class="mb-3">
                    <label for="party_abbreviation" class="form-label">Party Abbreviation</label>
                    <select id="party_abbreviation" class="form-select form-select-lg mb-3 form-control" aria-label=".form-select-lg example">
                        <option selected>Party Abbrevition</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                      </select>
                </div>
                <div class="mb-3">
                    <label for="party_score" class="form-label">Party Score</label>
                    <input type="number" class="form-control" id="party_score">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <%- include('./partials/footer'); %>
  </body>
</html>